<Window x:Class="TelHai.DotNet.PlayerProject.MusicPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TelHai.DotNet.PlayerProject"
        Title="Classroom Music Player" Height="500" Width="900"
        Background="#222" Foreground="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
            <TextBlock x:Name="txtStatus" Text="Ready" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Border BorderBrush="#444" BorderThickness="1" CornerRadius="5" Background="#333" Margin="0,0,0,20" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="imgAlbumArt" Width="120" Height="120" Stretch="Uniform" Margin="0,0,15,0" Source="/Images/music_note.png"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="txtTitle" Text="No Song Selected" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
                        <TextBlock x:Name="txtArtist" Text="Artist Name" FontSize="14" Foreground="#CCC" Margin="0,5,0,0"/>
                        <TextBlock x:Name="txtAlbum" Text="Album Name" FontSize="12" Foreground="#888" Margin="0,2,0,0"/>
                        <TextBlock x:Name="txtPath" Text="-" FontSize="10" Foreground="#555" Margin="0,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtCurrentTime" Grid.Column="0" Text="00:00" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#AAA"/>

                <Slider x:Name="sliderProgress" Grid.Column="1" VerticalAlignment="Center" IsMoveToPointEnabled="True"
                        PreviewMouseLeftButtonDown="Slider_DragStarted"
                        PreviewMouseLeftButtonUp="Slider_DragCompleted"/>

                <TextBlock x:Name="txtTotalTime" Grid.Column="2" Text="00:00" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#AAA"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="STOP" Click="BtnStop_Click" Width="80" Height="40" Margin="5"/>
                <Button Content="PLAY" Click="BtnPlay_Click" Width="100" Height="40" Margin="5" FontWeight="Bold" Background="#007ACC" Foreground="White"/>
                <Button Content="PAUSE" Click="BtnPause_Click" Width="80" Height="40" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Volume " VerticalAlignment="Center"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="150" ValueChanged="SliderVolume_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="lstLibrary" Grid.Row="1" Background="#333" Foreground="White" 
                     MouseDoubleClick="LstLibrary_MouseDoubleClick"
                     SelectionChanged="LstLibrary_SelectionChanged"/>

            <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add MP3" Click="BtnAdd_Click" Width="70" Margin="2"/>
                <Button Content="Remove" Click="BtnRemove_Click" Width="60" Margin="2"/>
                <Button Content="Edit" Click="BtnEdit_Click" Width="60" Margin="2" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
                <Button Content="Settings" Click="BtnSettings_Click" Width="60" Margin="2" Background="#555" Foreground="White"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>