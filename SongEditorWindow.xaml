<Window x:Class="TelHai.DotNet.PlayerProject.SongEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.DotNet.PlayerProject"
        mc:Ignorable="d"
        Title="SongEditorWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Edit Song Info" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Title:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Artist:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Album:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Album, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

            <Button Content="Save &amp; Close" Command="{Binding SaveCommand}" 
                    Height="40" Margin="0,20,0,0" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Column="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Slideshow Images" FontSize="14" FontWeight="Bold" Margin="10"/>

            <ListBox Grid.Row="1" ItemsSource="{Binding ImageList}" Margin="10" BorderBrush="#CCC" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis" ToolTip="{Binding}" VerticalAlignment="Center"/>

                            <Button Content="❌" Width="30" Height="25" Margin="10,0,0,0"
                                    Command="{Binding DataContext.RemoveImageCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Foreground="Red"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Grid.Row="2" Content="+ Add Image" Command="{Binding AddImageCommand}" Margin="10" Height="30"/>
        </Grid>
    </Grid>
</Window>
